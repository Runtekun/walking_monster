<div class="min-h-screen flex items-center justify-center bg-[url('/assets/registrations-bg.png')] bg-cover bg-center bg-no-repeat px-4">
  <div class="w-full max-w-lg p-8 rounded-lg shadow-md bg-[url('/assets/registrations_paper.png')] bg-cover bg-center bg-no-repeat">
    <h2 class="text-2xl font-bold text-center mb-6">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="mb-4">
        <%= f.label :name, "ユーザー名", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.text_field :name, placeholder: "ユーザー名を入力してください", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-red-600 text-sm mt-1 min-h-[1.25rem]">
          <%= resource.errors[:name].present? ? resource.errors.full_messages_for(:name).first : "&nbsp;".html_safe %>
        </p>
      </div>

      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, placeholder: "メールアドレスを入力してください", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-red-600 text-sm mt-1 min-h-[1.25rem]">
          <%= resource.errors[:email].present? ? resource.errors.full_messages_for(:email).first : "&nbsp;".html_safe %>
        </p>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block text-gray-700 font-semibold mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500 block mb-1">（<%= @minimum_password_length %>文字以上で入力してください）</em>
        <% end %>
        <%= f.password_field :password, placeholder: "パスワードを入力してください", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-red-600 text-sm mt-1 min-h-[1.25rem]">
          <%= resource.errors[:password].present? ? resource.errors.full_messages_for(:password).first : "&nbsp;".html_safe %>
        </p>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password_confirmation, placeholder: "パスワードをもう一度入力してください", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-red-600 text-sm mt-1 min-h-[1.25rem]">
          <%= resource.errors[:password_confirmation].present? ? resource.errors.full_messages_for(:password_confirmation).first : "&nbsp;".html_safe %>
        </p>
      </div>

      <div class="text-center">
        <%= f.submit "登録する", class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition-colors" %>
      </div>

    <% end %>
  </div>
</div>