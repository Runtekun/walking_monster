<div class="min-h-screen flex items-center justify-center bg-[url('/assets/registrations-bg.png')] bg-cover bg-center bg-no-repeat px-4">
  <div class="w-full max-w-md p-8 rounded-lg shadow-md bg-white bg-opacity-90">
    <h2 class="text-2xl font-bold text-center mb-6">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力してください", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-red-600 text-sm mt-1 min-h-[1.25rem]">
          <%= resource.errors[:email].present? ? resource.errors.full_messages_for(:email).first : "&nbsp;".html_safe %>
        </p>
      </div>

      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block text-gray-700 font-semibold mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力してください", class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-red-600 text-sm mt-1 min-h-[1.25rem]">
          <%= resource.errors[:password].present? ? resource.errors.full_messages_for(:password).first : "&nbsp;".html_safe %>
        </p>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, "ログイン情報を記憶する", class: "text-gray-700 text-sm" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= f.submit "ログイン", class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition-colors" %>
      </div>

    <% end %>

   <div class="mt-6 text-center text-sm text-blue-600">
    <%= render "devise/shared/links" %>
   </div>
  </div>
</div>
