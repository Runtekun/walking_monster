<div class="bg-[#f4f7fb] min-h-screen py-12">
  <div class="max-w-3xl mx-auto p-8 bg-white rounded-xl shadow-md">
    <h1 class="text-2xl font-bold mb-8 text-center">お問い合わせ</h1>

    <form action="<%= contact_path %>" method="post" class="space-y-6">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

      <div>
        <label class="block mb-1 font-medium">お名前</label>
        <input type="text" name="name" required class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-300">
      </div>

      <div>
        <label class="block mb-1 font-medium">メールアドレス</label>
        <input type="email" name="email" required class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-300">
      </div>

      <div>
        <label class="block mb-1 font-medium">お問い合わせ内容</label>
        <textarea name="message" rows="6" required class="w-full border border-gray-300 rounded-md p-3 focus:outline-none focus:ring-2 focus:ring-blue-300"></textarea>
      </div>

      <div class="text-center">
        <button type="submit" class="bg-blue-500 text-white px-8 py-2 rounded hover:bg-blue-600 transition">
          送信
        </button>
      </div>
    </form>
  </div>
</div>