<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "walking monster" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>
    <%= yield :google_maps %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= include_gon %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-MTBPWMHXH5"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-MTBPWMHXH5');
    </script>
  </head>

<body>
  <div class="flex flex-col min-h-screen">
    <% if user_signed_in? %>
    <!-- PC版ヘッダー -->
    <div class="hidden lg:block">
      <%= render 'shared/header' %>
    </div>

    <!-- スマホ版ヘッダー -->
    <div class="flex lg:hidden">
      <%= render 'shared/header_sp' %>
    </div>
  
    <% else %>
      <%= render 'shared/before_login_header' %>
    <% end %>

    <main class="flex-1 pt-16 pb-16">
      <%= yield %>
    </main>

    <!-- PC版フッター -->
    <div class="hidden lg:block">
      <%= render 'shared/footer' %>
    </div>

    <!-- スマホ版フッター -->
    <div class="flex lg:hidden">
      <%= render 'shared/footer_sp' %>
    </div>

  </div>
</body>
</html>
