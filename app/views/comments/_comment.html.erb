<tr id="comment-<%= comment.id %>" class="border-b">
  <td class="w-16 p-2">
  <%= image_tag "post_placeholder.png", class: "w-full h-48 object-cover" %> 
  </td>
  <td class="p-2">
    <h3 class="text-sm font-semibold"><%= comment.user.name %></h3>
    <p class="text-gray-700 text-sm"><%= simple_format(comment.body) %></p>
  </td>
  <% if current_user.own?(comment) %>
    <td class="p-2 text-right">
      <div class="flex gap-2 justify-end">
        <%= link_to "#", class: "text-blue-500 hover:text-blue-700 edit-comment-link" do %>
          <i class="bi bi-pencil-fill"></i>
        <% end %>
        <%= link_to "#", class: "text-red-500 hover:text-red-700 delete-comment-link" do %>
          <i class="bi bi-trash-fill"></i>
        <% end %>
      </div>
    </td>
  <% end %>
</tr>