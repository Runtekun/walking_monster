<tr id="comment-<%= comment.id %>">
  <td colspan="3" class="p-4">
    <div class="flex items-start justify-between gap-3">

      <div class="flex gap-3">
        <%= image_tag current_user.avatar.url, class: "w-10 h-10 rounded-full object-cover" %>
        <div class="flex-1">
          <h3 class="text-sm font-semibold text-gray-900"><%= comment.user.name %></h3>
          <p class="text-gray-700 text-sm"><%= simple_format(comment.body) %></p>
        </div>
      </div>

      <!-- 編集・削除ボタン（自分のコメントのみ表示） -->
      <% if current_user.own?(comment) %>
        <div class="flex gap-2 justify-end">
          <%= link_to "#", class: "text-blue-500 hover:text-blue-700 edit-comment-link" do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
          <%= link_to "#", class: "text-red-500 hover:text-red-700 delete-comment-link" do %>
            <i class="bi bi-trash-fill"></i>
          <% end %>
        </div>
      <% end %>
    </div>

    <hr class="mt-3 border-t border-gray-300">
  </td>
</tr>