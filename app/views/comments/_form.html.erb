<div class="flex justify-center mt-6" id="comment-form">
  <div class="w-full max-w-2xl">
    <%= form_with model: comment, url: post_comments_path(post), class: "space-y-4" do |f| %>
      <div>
        <%= f.label :body, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_area :body, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200", rows: "4", placeholder: Comment.human_attribute_name(:body) %>
      </div>
      <div class="flex justify-end">
        <%= f.submit "投稿", class: "px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>