<div class="container mx-auto pt-3">
  <div class="flex justify-center">
    <div class="w-full max-w-4xl">
      <form>
        <div class="flex mb-3">
          <input class="w-full p-2 border rounded-l-md" placeholder="検索ワード" type="search"/>
          <input type="submit" value="検索" class="bg-blue-500 text-white px-4 py-2 rounded-r-md cursor-pointer"/>
        </div>
      </form>
    </div>
  </div>
  
  <div class="mt-6">
    <% if @posts.present? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <%= render @posts %>
      </div>
    <% else %>
      <div class="text-center text-gray-600 mt-4">投稿がありません</div>
    <% end %>
  </div>
</div>
