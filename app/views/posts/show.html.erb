<div class="container mx-auto flex justify-center py-10">
  <div id="post-id-<%= @post.id %>" class="max-w-2xl bg-white rounded-lg shadow-md overflow-hidden p-6">
    <h1 class="text-2xl font-bold text-center mb-6">投稿詳細</h1>


    <div class="border border-gray-300 rounded-lg p-4">
      <span class="bg-gray-200 text-gray-700 text-xs font-semibold px-2 py-1 rounded">投稿内容</span>
      <div class="flex items-start gap-4 mt-4">

        <div class="w-1/3">
          <%= image_tag "post_placeholder.png", class: "w-full h-32 object-cover rounded-md" %>
        </div>

        <div class="w-2/3">
          <h3 class="text-lg font-semibold"><%= @post.title %></h3>
          <p class="text-gray-600 text-sm">ユーザー名: <%= @post.user.name %></p>
          <p class="text-gray-500 text-xs"><%= l @post.created_at, format: :long %></p>
        </div>
      </div>
      <p class="mt-4 text-gray-700"><%= simple_format(@post.body) %></p>
    </div>

    <div class="mt-6">
      <%= render 'comments/form', comment: @comment, post: @post %>
    </div>

    <div class="mt-4">
    <%= render @comments %>
    </div>
  </div>
</div>