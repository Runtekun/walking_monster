<div id="post-id-<%= post.id %>" class="bg-white rounded-lg shadow-md overflow-hidden">
<%= image_tag post.post_image_url, class: "w-72 h-48 object-cover rounded-lg shadow-md" %>
<div class="p-4">
  <div class="flex justify-between items-center">
    <h4 class="text-lg font-semibold">
       <%= link_to post.title, post_path(post), class: "hover:text-blue-500 transition-colors duration-300" %>
    </h4>
    <div class='flex space-x-2'>
      <%= link_to '#', id: "button-edit-\#{post.id}" do %>
        <i class="bi bi-pencil-fill text-gray-600"></i>
      <% end %>
      <%= link_to '#', id: "button-delete-\#{post.id}", method: :delete, data: {confirm: ''} do %>
        <i class="bi bi-trash-fill text-red-600"></i>
      <% end %>
    </div>
  </div>
  <ul class="text-gray-600 text-sm mt-2">
    <li><i class="bi bi-person"></i> <%= post.user.name %></li>
    <li><i class="bi bi-calendar"></i> <%= l post.created_at, format: :short %></li>
  </ul>
  <p class="text-gray-700 mt-2"><%= post.body %></p>
</div>
</div>
